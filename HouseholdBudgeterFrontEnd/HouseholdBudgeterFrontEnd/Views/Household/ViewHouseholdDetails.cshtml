@model HouseholdDetailViewModel
@{
    ViewBag.Title = "ViewHouseholdDetails";
}

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Household Details</h1>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="container">
    <h5>Household Details</h5>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card mb-3">
                <div class="card-header">
                    <table class="table table-striped table-fit" id="dataTable" cellspacing="-10">
                        <thead>
                            <tr>
                                <th scope="col">Household Name</th>
                                <th scope="col">Date Created</th>
                                <th scope="col">Date Updated</th>
                                <th scope="col">Description</th>
                                <th scope="col">Total Balance</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@Model.Name</td>
                                <td>@Model.DateCreated</td>
                                <td>@Model.DateUpdated</td>
                                <td>@Model.Description</td>
                                <td>@Model.TotalBalance</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

    <h5>Household Detail By Category</h5>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            <div class="card mb-3">
                <div class="card-header">
                    <table class="table table-striped table-fit" id="dataTable" cellspacing="-10">
                        <thead>
                            <tr>
                                <th scope="col">Category Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Total Transaction Amounts</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var cat in Model.HouseholdCategories)
                            {
                                <tr>
                                    <td>@cat.Name</td>
                                    <td>@cat.Description</td>
                                    <td>@cat.TotalTransactionAmounts</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>












